{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Luna Study RIPAM - LLM Output Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "tutor",
    "materia",
    "difficulty",
    "question_id",
    "domanda",
    "opzioni",
    "corretta",
    "spiegazione_breve",
    "tags",
    "visual"
  ],
  "properties": {
    "tutor": {
      "type": "string",
      "enum": ["Luna", "Stella", "Maria"]
    },
    "materia": {
      "type": "string",
      "minLength": 2,
      "maxLength": 80
    },
    "difficulty": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5
    },
    "question_id": {
      "type": "string",
      "minLength": 6,
      "maxLength": 64,
      "pattern": "^[A-Za-z0-9_\\-]+$"
    },
    "domanda": {
      "type": "string",
      "minLength": 20,
      "maxLength": 900
    },
    "opzioni": {
      "type": "object",
      "additionalProperties": false,
      "required": ["A", "B", "C", "D"],
      "properties": {
        "A": { "type": "string", "minLength": 1, "maxLength": 300 },
        "B": { "type": "string", "minLength": 1, "maxLength": 300 },
        "C": { "type": "string", "minLength": 1, "maxLength": 300 },
        "D": { "type": "string", "minLength": 1, "maxLength": 300 }
      }
    },
    "corretta": {
      "type": "string",
      "enum": ["A", "B", "C", "D"]
    },
    "spiegazione_breve": {
      "type": "string",
      "minLength": 20,
      "maxLength": 900
    },
    "approfondimento": {
      "type": "string",
      "maxLength": 3000
    },
    "tags": {
      "type": "array",
      "minItems": 8,
      "maxItems": 28,
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 60
      }
    },
    "visual": {
      "type": "string",
      "minLength": 30,
      "maxLength": 380
    }
  }
}
