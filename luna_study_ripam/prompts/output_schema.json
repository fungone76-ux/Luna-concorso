{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Luna Study RIPAM - Smart Lesson Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "tutor", "materia", "difficulty", "question_id",
    "lezione", "domanda", "opzioni", "corretta",
    "spiegazione_breve", "tags", "visual"
  ],
  "properties": {
    "tutor": { "type": "string", "enum": ["Luna", "Stella", "Maria"] },
    "materia": { "type": "string" },
    "difficulty": { "type": "integer", "minimum": 1, "maximum": 5 },
    "question_id": { "type": "string" },

    "lezione": {
      "type": "string",
      "description": "La spiegazione teorica dell'argomento (Step 1)",
      "minLength": 50,
      "maxLength": 1500
    },

    "domanda": {
      "type": "string",
      "description": "Il quiz sull'argomento appena spiegato (Step 3)",
      "minLength": 10,
      "maxLength": 500
    },

    "opzioni": {
      "type": "object",
      "required": ["A", "B", "C", "D"],
      "properties": {
        "A": { "type": "string" },
        "B": { "type": "string" },
        "C": { "type": "string" },
        "D": { "type": "string" }
      }
    },
    "corretta": { "type": "string", "enum": ["A", "B", "C", "D"] },
    "spiegazione_breve": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "visual": { "type": "string" }
  }
}